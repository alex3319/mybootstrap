// ****** MIXINS *********** //
$color = #000
$tablet-widths = '(min-width: 768px)'
$desktop-widths = '(min-width: 1200px)'
$container
  min-width: 320px
  max-width: 80%
  margin: 0 auto

  @media $tablet-widths
    max-width: 660px

  @media $desktop-widths
    max-width: 1200px



///////////////////////////////////////////////////

body, html
  width: 100%
  margin: 0
  padding: 0
  font-family: "Trebuchet MS", Geneva, Verdana, sans-serif


.overlay
  overflow: hidden
  position: fixed
  width: 100%
  height: 0
  top: 0
  z-index: 21
  background: rgba(247,175,19,0.9)
  transition: height 1s ease-in-out
  @media $tablet-widths
    position: static
    overflow visible
    height: 100%
    background: none
.open
  height: 100%

.open .menu_params
  opacity: 1


.clearfix
  &::after
    content: ''
    display: table
    clear: both


// ****** pages-header *********** //
.pages-header
  min-height: 200px
  @extend $container
  &__logo
    margin: 0 auto
    display: block
    box-sizing: content-box
    max-width: 284px
    height: 68px
    padding-top: 12px
    background-image: url('/assets/img/mainlogo.png')
    background-repeat: no-repeat
    background-position: center
    margin-bottom: 12px
  &__contacts
    @extend $container
    position: relative
    font-size: 19px
    text-align: left
    padding-top: 18px
    padding-bottom: 18px
    border-top: 4px solid #f7af13
    border-bottom: 4px solid #f7af13
    box-sizing: border-box;
    padding-left: 4px
    a
      color: #4b1c0c
      text-decoration: none


@media $tablet-widths
          .pages-header
            margin-top: 17px
            min-height: 70px
            padding-bottom: 60px
            &__logo
              bottom: 0
              width: 320px
              float: left
            &__contacts
              margin-top: 13px
              margin-right: 15px
              width: 320px
              float: right
              text-align: center
            .navigation
              display: none

@media $desktop-widths
          .pages-header
            padding-bottom: 30px
            @extend $container








.menu
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  &_params
    @extend $container
    float: left
    font-size: 0
    padding: 0
    padding-top: 10px
    position: absolute
    height: auto
    top: 233px
    left: 50%
    transform: translate(-50%, -50%)
    opacity: 0
    transition: opacity 300ms ease 300ms
    @media $tablet-widths
      width: 100%
      margin: 0 auto
      opacity: 1
      top: 120px
    @media $desktop-widths
      width: 100%
      top: 50px
      padding-left: 300px


  &__node
    &_params
      display: block
      margin-top: 20px
      margin-left: 25px
      margin-right: 25px
      font-size: 20px
      list-style-type: none
      @media $tablet-widths
        display: inline-block


  &__link
    &_params
      position: relative
      font-family: Helvetica
      line-height: 55px
      color: white
      outline: none
      border: none
      text-decoration: none
      text-transform: uppercase
      display: block
      padding-bottom: 2px
      &:hover
        color: #659113
      @media $tablet-widths
        color: #000
      @media $desktop-widths
        text-transform: none
    &_social span
      font-size: 14px
      display: inline-block
      vertical-align: super
    &_img
      padding-right: 10px

  &__social_params
    @media $tablet-widths
      display: none

.line
  &_params
    display: none
    color: #659113
    background: #659113
    height: 4px
    border:none
    @extend $container
    @media $tablet-widths
      display: block
  &_margins
    margin-bottom: 28px

/*** 

====================================================================
    Navigation Burger Deluxe
====================================================================

***/

.navigation
  box-sizing border-box
  width: 100%
  height: 80px
  z-index: 400
  position: absolute

.burger_deluxe 
  position: absolute
  right: 15px
  top: -4px
  cursor: pointer
  width: 34px
  height: 30px
  z-index: 3

.burger_global
  position: absolute
  border-top: 3px solid #f7af13
  width: 100%

.burger_global.top_bun
  top: 0
  transition: transform 500ms ease, border 500ms ease
  transform-origin: left center

.burger_global.patty
  top: 12px
  transition: opacity 500ms ease

.burger_global.bottom_bun
  top: 24px
  transition: transform 500ms ease, border 500ms ease
  transform-origin: left center

.open span
  border-color: #fff

.open .top_bun
  transform: rotate(45deg)

.open .patty
  opacity: 0

.open .bottom_bun
  transform: rotate(-45deg)
.slider
  @extend $container


.gallery
  li
    display inline-block
    width 250px
    height 250px
    overflow hidden
    margin 0 10px 0 0
    padding-top 0
    .fancybox
      display block
      position absolute
      width 250px
      height 250px

.itemdesc
  color #fff
  font-size 13px
  background rgba(0,0,0,0.4)
  padding 10px
  position relative
  width 250px
  top 250px


.flex-container a:active,
.flexslider a:active,
.flex-container a:focus,
.flexslider a:focus
  outline none

.slides,
.flex-control-nav,
.flex-direction-nav
  margin 0
  padding 0
  list-style none

.flex-control-nav
  display none
  width 100%
  position absolute
  bottom -40px
  text-align center
  li
    margin 0 6px
    display inline-block
    zoom 1

@font-face
  font-family 'flexslider-icon'
  src url('/app/lib/fonts/flexslider-icon.eot')
  src url('/app/lib/fonts/flexslider-icon.eot?#iefix') format('embedded-opentype'),
  url('/app/lib/fonts/flexslider-icon.woff') format('woff')
  url('/app/lib/fonts/flexslider-icon.ttf') format('truetype')
  url('/app/lib/fonts/flexslider-icon.svg#flexslider-icon') format('svg')
  font-weight normal
  font-style normal

.flexslider
  margin 0
  padding 0
  position relative
  zoom 1
  .slides
    zoom 1
    & > li
      display block
      -webkit-backface-visibility hidden
    img
      width 100%
      display block
  &:hover
    .flex-prev
      opacity 0.7
      left 10px
    .flex-next
      opacity 0.7
      right 10px

.flex-pauseplay
  span
    text-transform capitalize
  a
    display block
    width 20px
    height 20px
    position absolute
    bottom 5px
    left 10px
    opacity 0.8
    z-index 10
    overflow hidden
    cursor pointer
    color #000
    &:before
      font-family "flexslider-icon"
      font-size 20px
      display inline-block
      content '\f004'
    &:hover
      opacity 1
    &.flex-play
      &:before
        content '\f003'

.slides
  &:after
    content "."
    display block
    clear both
    visibility hidden
    line-height 0
    height 0

html[xmlns]
  .slides
    display block

*
  html
    .slides
      height 1%

.no-js
  .slides
    & > li
      &:first-child
        display block

.flex-viewport
  max-height 2000px
  -webkit-transition all 1s ease
  -moz-transition all 1s ease
  -o-transition all 1s ease
  transition all 1s ease

.loading
  .flex-viewport
    max-height 300px

.carousel
  li
    margin-right 5px

.flex-direction-nav
  height 40px
  a
    text-decoration none
    display block
    width 40px
    height 40px
    margin -20px 0 0
    position absolute
    top 50%
    z-index 10
    overflow hidden
    opacity 1
    cursor pointer
    color rgba(255,255,255,0.8)
    text-shadow 1px 1px 0 rgba(255,255,255,0.3)
    -webkit-transition all .3s ease
    -moz-transition all .3s ease
    transition all .3s ease
    &:before
      font-family "flexslider-icon"
      font-size 40px
      line-height 1
      display inline-block
      content '\f001'
    &.flex-next
      &:before
        content '\f002'
.flex-prev
  left 0
.flex-next
  right 0
  text-align right
.flex-disabled
  opacity 1
  cursor default

.slider2
  .flex-direction-nav
    a
      text-decoration none
      display block
      width 40px
      height 40px
      margin -20px 0 0
      position absolute
      top 36%
      z-index 10
      overflow hidden
      opacity 1
      cursor pointer
      color rgba(0,0,0,0.8)
      text-shadow 1px 1px 0 rgba(255,255,255,0.3)
      -webkit-transition all .3s ease
      -moz-transition all .3s ease
      transition all .3s ease

.flexslider:hover .flex-next:hover, .flexslider:hover .flex-prev:hover
  opacity 1

.flex-control-paging
  li
    a
      width 11px
      height 11px
      display block
      background #666
      background rgba(0,0,0,0.5)
      cursor pointer
      text-indent -9999px
      -webkit-border-radius 20px
      -moz-border-radius 20px
      -o-border-radius 20px
      border-radius 20px
      -webkit-box-shadow inset 0 0 3px rgba(0,0,0,0.3)
      -moz-box-shadow inset 0 0 3px rgba(0,0,0,0.3)
      -o-box-shadow inset 0 0 3px rgba(0,0,0,0.3)
      box-shadow inset 0 0 3px rgba(0,0,0,0.3)
      &:hover
        background #333
        background rgba(0,0,0,0.7)
      &.flex-active
        background #000
        background rgba(0,0,0,0.9)
        cursor default

.flex-control-thumbs
  margin 5px 0 0
  position static
  overflow hidden
  li
    width 25%
    float left
    margin 0
  img
    width 100%
    display block
    opacity .7
    cursor pointer
    &:hover
      opacity 1
  .flex-active
    opacity 1
    cursor default

@media screen and (max-width: 860px)
  .flex-direction-nav
    .flex-prev
      opacity 1
      left 10px
    .flex-next
      opacity 1
      right 10px

.content
  @extend $container
  font-size: 15px
  box-sizing border-box
  padding-left: 7px
  padding-right: 7px
  .banner
    min-width: 100%
    max-width: 100%

  h1
    font-size: 17px
    text-align: center
  h2
    font-size: 15px
    text-align: center
  p
    line-height: 24px

.goods
  @extend $container
  text-align: center
  margin-left: auto
  margin-right: auto

  a
    text-decoration: none
    color: #000000

  h2
    font-size: 22px
    text-align: center
    
  &__item
    @media $tablet-widths
      float: left
      margin-right: 32px
    @media $desktop-widths
      margin-right: 106px
      margin-left: 106px



footer
  box-sizing: border-box
  background: #659113
  min-width: 320px
.footer
  @extend $container
  min-height: 300px
  box-sizing: border-box
  padding-left: 8px
  padding-right: 8px
  @media $tablet-widths
    min-height: 200px


  &__logo
    margin: 0 auto
    display: block
    width: 284px
    height: 68px
    padding-top: 72px
    background-image: url('/assets/img/logo_white.png')
    background-repeat: no-repeat
    background-position: center
    float: left

  &__address
    max-width: 420px
    padding-top: 28px
    word-wrap: break-word
    @media $tablet-widths
      max-width: 360px
      float: right

    p
      color: #fff
      line-height: 29px
      font-size: 16px
      text-align: center
      @media $tablet-widths
        font-size: 14px
        text-align: right



